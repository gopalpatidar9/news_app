<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <section class="vh-100 mt-5">
<br><br><br><br>
  <div class="container-fluid h-custom">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-md-9 col-lg-6 col-xl-5">
        <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.webp"
          class="img-fluid" alt="Sample image">
      </div>
      <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">
        <form>
          <div class="d-flex flex-row align-items-center justify-content-center justify-content-lg-start">
            <p class="lead fw-normal mb-0 me-3">Sign up with</p>
            <button type="button" class="btn btn-primary btn-floating mx-1" style="background:#0146BF;">
              <i class="fab fa-facebook-f"></i>
            </button>

            <button type="button" class="btn btn-primary btn-floating mx-1" style="background:#0146BF;">
              <i class="fab fa-twitter"></i>
            </button>

            <button type="button" class="btn btn-primary btn-floating mx-1" style="background:#0146BF;">
              <i class="fab fa-linkedin-in"></i>
            </button>
          </div>

          <div class="divider d-flex align-items-center my-4">
            <p class="text-center fw-bold mx-3 mb-0">Or</p>
          </div>

          <!-- Email input -->
          <div class="form-outline mb-4">
            <%= f.email_field :email, autofocus: true, autocomplete: "email" , id:"form3Example3" , class:"form-control form-control-lg", placeholder:"Enter a valid email address", style:"width:531px;" %>
            <label class="form-label" for="form3Example3">Email address</label>
          </div>

          <!-- Password input -->
          <% if @minimum_password_length %>
             <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %>
          <div class="form-outline mb-3">
            <%= f.password_field :password, autocomplete: "new-password", id:"form3Example4" , class:"form-control form-control-lg" ,placeholder:"Enter password" , style:"width:531px;" %>
            <label class="form-label" for="form3Example4">Password</label>
          </div>
          <div class="form-outline mb-3">
            <%= f.password_field :password_confirmation, autocomplete: "new-password", id:"form3Example4" , class:"form-control form-control-lg" ,placeholder:"Enter password" , style:"width:531px;" %>
            <label class="form-label" for="form3Example4">Password confirmation</label>
          </div>
          <div class="text-center text-lg-start mt-4 pt-2">
            <%= f.submit "Signup", class:"btn btn pt-3 pb-3 pl-4 pr-4" , style:"background:#0146BF;border:none; border-radius:4px; font-size:14px;" %>
            <p class="small fw-bold mt-2 pt-1 mb-0"> have an account? <a href="#!"
                class="link-danger"><%= link_to 'Login' , new_user_session_path , class:"link-danger" , style:'text-decoration:none;'%></a></p>
          </div>

        </form>
      </div>
    </div>
  </div>
  </div>
</section>
<% end %>
<!-- MDB -->
<script
  type="text/javascript"
  src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/6.3.1/mdb.min.js"
></script>