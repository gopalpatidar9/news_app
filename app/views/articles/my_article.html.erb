    <% @my_article.each do |article| %>
     <div class="card mb-3" style="max-width:; border: solid 1px #D0D0D0 ; box-shadow: rgba(0, 0, 0, 0.35) 0px 0px 0px;">
        <div class="row g-0">
            <div class="col-md-1">
            <img src="<%= article.file%>" alt="Trendy Pants and Shoes" class="img-fluid rounded mt-3 ml-3 mb-3" style="height:90px; width:90px;"/>
            </div>
            <div class="col ml-4">
            <div class="card-body">
                <p class="card-text" style="font-size:17px;"><b><%= article.title.truncate(110) %></b><i class="fa-solid fa-eye " data-bs-toggle="tooltip"  title="View" style="float:right;"></i><i class="fa-solid fa-trash mr-4" data-bs-toggle="tooltip"  title="Remove this post" style="float:right;"></i><i class="fa-solid fa-tag mr-4" data-bs-toggle="tooltip"  title="Tag Labels" style="float:right;" ></i><i class="fa-solid fa-paper-plane mr-4" data-bs-toggle="tooltip"  title="Send this Post" style="float:right;"></i></p>
                <p class="card-text">
                <small class="text-muted">Published : <%= article.created_at.strftime(" %d  %B, %Y")%></small>
                <i class="" data-bs-toggle="tooltip"  title="View count" style="float:right; color:gray;"><%= link_to '' , my_article_view_article_path(article) , class:'fa-solid fa-chart-column mt-2 text-decoration-none' , style:"color:gray;" %></i><small style="float:right;" class="mr-1 mt-2"><%= article.article_views.count %></small>
                <i class="fa-solid fa-message mr-3 mt-2" data-bs-toggle="tooltip"  title="Comment count" style="float:right; color:gray;"></i><small style="float:right;" class="mr-1 mt-2">100</small>
                <i class="fa-solid fa-heart mr-3 mt-2" data-bs-toggle="tooltip"  title="Like count" style="float:right; color:gray;"></i><small style="float:right;" class="mr-1 mt-2"><%= article.likes.count %></small>
                </p>
            </div>
            </div>
        </div>
     </div>
    <% end %>
