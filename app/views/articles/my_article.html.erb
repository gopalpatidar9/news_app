        <span data-bs-toggle="tooltip" data-bs-placement="top" title="Total number of followers" class="mr-3 border-end pt-4 pb-4 pr-4" style="color:green;"><i class="fa-solid fa-users mr-3" style="color:gray;"></i> 2 Followers</span>
        <span data-bs-toggle="tooltip" data-bs-placement="top" title="Total number of posts" class="mr-3 border-end pt-4 pb-4 pr-4" style="color:green;"><i class="fa-regular fa-newspaper mr-2" style="color:gray;"></i> <%= @my_article.count %><%= link_to 'Posts' , my_article_article_path, class:'ml-1 text-decoration-none' , style:'color:green;'%></span>
