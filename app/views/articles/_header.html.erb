<!-- Font Awesome -->
<link
  href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
  rel="stylesheet"
/>
<!-- Google Fonts -->
<link
  href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap"
  rel="stylesheet"
/>
<!-- MDB -->
<link
  href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/6.3.1/mdb.min.css"
  rel="stylesheet"
/>




<!-- Navbar -->
<nav class="navbar fixed-top navbar-expand-lg navbar-dark" style="background:#0146BF;">
  <!-- Container wrapper -->
  <div class="container-fluid">
    <!-- Toggle button -->
    <button
      class="navbar-toggler"
      type="button"
      data-mdb-toggle="collapse"
      data-mdb-target="#navbarSupportedContent"
      aria-controls="navbarSupportedContent"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <i class="fas fa-bars"></i>
    </button>

    <!-- Collapsible wrapper -->
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <!-- Navbar brand -->
      <a class="navbar-brand mt-2 mt-lg-0" href="#">
        <img
          src="https://mdbcdn.b-cdn.net/img/logo/mdb-transaprent-noshadows.webp"
          height="15"
          alt="MDB Logo"
          loading="lazy"
        />
      </a>
      <!-- Left links -->
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">  
        <i class="fa-solid fa-home ml-3" style="color:#fff; margin-top:11px;"></i>
        <li class="nav-item">
          <a class="nav-link active" href="#" style="text-decoration:none;">Home</a>
        </li>
        <i class="fa-solid fa-gear ml-3" style="color:#fff; margin-top:11px;"></i>
        <li class="nav-item">
          <a class="nav-link active" href="#" style="text-decoration:none;">Setting</a>
        </li>
        <i class="fa-solid fa-eject ml-3" style="color:#fff; margin-top:11px;"></i>
        <li class="nav-item">
          <a class="nav-link active" href="#"style="text-decoration:none;" >About</a>
        </li>
        <i class="fa-solid fa-bookmark ml-3" style="color:#fff; margin-top:11px;"></i>
        <li class="nav-item">
          <a class="nav-link active" href="#" style="text-decoration:none;">Bokmarked</a>
        </li>
        <i class="fa-regular fa-newspaper ml-3" style="color:#fff; margin-top:11px;"></i>
        <% if current_user.present?%>
        <li class="nav-item">
          <a style="text-decoration:none;"><%= link_to 'My Article' , my_article_article_path(@articles) , class:'nav-link active' %></a>
        </li>
        <% else %>
        <li class="nav-item">
          <a style="text-decoration:none;"><%= link_to 'My Article' , new_user_session_path , class:'nav-link active' %></a>
        </li>
        <% end%>

        <% if current_user.present?%>
        <i class="fa fa-user ml-3" style="color:#fff; margin-top:11px;" ></i>
        <% if @profile.present? %>
           <li class="nav-item">
            <span class=""></span><%= link_to 'Profile',@profile , class:'nav-link active' , style:'text-decoration:none;' %>
           </li>
        <% else %>
            <li class="nav-item ">
            <span class=""></span><%= link_to 'Profile' , new_profile_path , class:'nav-link active' , style:'text-decoration:none;' %>
            </li>
        <% end %>
        <% else %>
            <i class="fa fa-user ml-3" style="color:#fff; margin-top:11px;" ></i>
            <li class="nav-item">
            <span class=""></span><%= link_to 'Profile',new_user_session_path , class:'nav-link active' , style:'text-decoration:none;' %>
           </li>
        <% end %>    
      </ul>
      <!-- Left links -->
    </div>
    <!-- Collapsible wrapper -->

    <!-- Right elements -->
    <div class="d-flex align-items-center">
      <!-- Icon -->
      <% if user_signed_in? %>
      <i class="fa-solid fa-right-from-bracket" style="color:#fff;"></i>
      <a class="text-reset me-3" >
         <%= button_to 'Logout', destroy_user_session_path, class:"" ,style:'background:#0146BF; color:fff; border:none; box-shadow: rgba(0, 0, 0, 0.35) 0px 0px 0px;', method: :delete %>
      <% else %>
         <i class="fa-solid fa-right-to-bracket" style="color:#fff;"></i>
         <%= button_to 'Login', new_user_session_path, class:"" , style:'background:#0146BF; color:fff; border:none; box-shadow: rgba(0, 0, 0, 0.35) 0px 0px 0px;'%>
      <% end %>
      </a>

      <!-- Notifications -->
      <div class="dropdown">
        <a
          class="text-reset me-3 dropdown-toggle hidden-arrow"
          href="#"
          id="navbarDropdownMenuLink"
          role="button"
          data-mdb-toggle="dropdown"
          aria-expanded="false"
        >
          <i class="fas fa-bell" style="color:#fff;"></i>
          <span class="badge rounded-pill badge-notification bg-danger">1</span>
        </a>
        <ul
          class="dropdown-menu dropdown-menu-end"
          aria-labelledby="navbarDropdownMenuLink"
        >
          <li>
            <a class="dropdown-item" href="#">Some news</a>
          </li>
          <li>
            <a class="dropdown-item" href="#">Another news</a>
          </li>
          <li>
            <a class="dropdown-item" href="#">Something else here</a>
          </li>
        </ul>
      </div>
      <!-- Avatar -->
    </div>
    <!-- Right elements -->
  </div>
  <!-- Container wrapper -->
</nav>
<!-- Navbar -->


<!-- MDB -->
<script
  type="text/javascript"
  src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/6.3.1/mdb.min.js"
></script>